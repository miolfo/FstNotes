<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/widget_bg">
<LinearLayout
    android:id="@+id/widget_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
    <TextView
        android:id="@+id/expired_notes_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fffa9e"
        android:padding="5px"
        android:layout_margin="4px"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Expired notes"/>
    <TextView
        android:id="@+id/upcoming_notes_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fffa9e"
        android:padding="5px"
        android:layout_margin="4px"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Upcoming notes"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/widget_top_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">
        <ListView
            android:id="@+id/expired_notes_widget_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></ListView>
        <ListView
            android:id="@+id/upcoming_notes_widget_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"></ListView>
    </LinearLayout>
</RelativeLayout>